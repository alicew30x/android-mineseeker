<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alison.portstarboard.MainActivity">

    <Button
        android:text="@string/show_leftName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/leftBtn"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <Button
        android:text="@string/show_rightName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightBtn"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/leftBtn"
        android:layout_alignBottom="@+id/leftBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="@string/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leftBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:id="@+id/question" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/question_side" />

    <Button
        android:text="@string/answer_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answerRight"
        android:layout_alignBaseline="@+id/answerLeft"
        android:layout_alignBottom="@+id/answerLeft"
        android:layout_alignRight="@+id/rightBtn"
        android:layout_alignEnd="@+id/rightBtn" />

    <Button
        android:text="@string/answer_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:id="@+id/answerLeft"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/leftBtn"
        android:layout_alignStart="@+id/leftBtn" />

</RelativeLayout>
